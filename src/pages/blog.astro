---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Base title="PSZ | Blog">
  <h1>Blog</h1>

  <ul>
    {posts.map(post => (
      <li>
        <a href={`/blog/${post.slug}/`}>
          {post.data.title}
        </a>
      </li>
    ))}
  </ul>
</Base>
